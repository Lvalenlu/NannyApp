<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@color/gray"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvNanniProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/tvNanniProfile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnNanniMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/man"
                android:background="@drawable/button_background_selector"
                android:text="@string/btnNanniMale"
                android:textSize="25sp"
                app:cornerRadius="0dp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnNanniFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background_selector"
                android:text="@string/btnNanniFemale"
                android:drawableTop="@drawable/woman"
                android:textSize="25sp"
                app:cornerRadius="0dp" />


        </TableRow>

        <Button
            android:id="@+id/btnNoMatter"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="@string/btnNoMatter"
            android:background="@drawable/button_background_selector"
            android:textSize="25sp"
            app:cornerRadius="0dp"/>

        <TextView
            android:id="@+id/tvAgeNanni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tvAge"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:textSize="25sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etMinAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:ems="10"
                    android:textColorHint="@color/gray"
                    android:hint="Min"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvMinAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvMin"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etMaxAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:ems="10"
                    android:textColorHint="@color/gray"
                    android:hint="Max"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvMaxAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvMax"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

        </TableRow>

        <TextView
            android:id="@+id/tvLanguageSpoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tvLanguageSpoken"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/etLanguageSpoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkerGray"
            android:minHeight="48dp"
            android:hint="Lenguaje hablado"
            android:textColorHint="@color/gray"
            android:ems="10"
            android:textColor="@color/white"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:id="@+id/tvSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tvSkills"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/etSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkerGray"
            android:minHeight="48dp"
            android:ems="10"
            android:textColorHint="@color/gray"
            android:hint="Habilidades requeridas"
            android:textColor="@color/white"
            android:inputType="text"
            android:padding="20dp" />
        <TextView
            android:id="@+id/tvBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tvBudget"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:textSize="25sp" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etMinBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:ems="10"
                    android:textColorHint="@color/gray"
                    android:hint="Min"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvMinBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvMin"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etMaxBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColorHint="@color/gray"
                    android:hint="Max"
                    android:textColor="@color/white"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvMaxBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvMax"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginHorizontal="8dp"
                app:cornerRadius="0dp"
                android:text="@string/btnBack" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/btnContinue"
                android:layout_marginHorizontal="8dp"
                app:cornerRadius="0dp" />
        </TableRow>
    </LinearLayout>
</ScrollView>