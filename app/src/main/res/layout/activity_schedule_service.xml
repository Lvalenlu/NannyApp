<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    tools:context=".ScheduleService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProgamService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/tvProgamService"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"/>

       <!-- <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:theme="@style/CalendarViewStyle"
            android:selectedWeekBackgroundColor="@color/darkerPink" />
        -->
        <TextView
            android:id="@+id/tvHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/tvHour"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:textSize="25sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:hint="Inicio"
                    android:textColorHint="@color/gray"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvStart"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkerGray"
                    android:ems="10"
                    android:hint="Fin"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tvEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvEnd"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_marginHorizontal="8dp"
                app:cornerRadius="0dp"
                android:text="@string/btnBack" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/pink"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="@string/btnContinue"
                android:layout_marginHorizontal="8dp"
                app:cornerRadius="0dp" />
        </TableRow>
    </LinearLayout>
</ScrollView>